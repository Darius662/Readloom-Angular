}

.collections-root-folders-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
  margin-bottom: 2rem;
}

.collection-details-section {
  background-color: #2c3034;
  border: 1px solid #373b3e;
  border-radius: 4px;
  margin-top: 2rem;
  padding: 1.5rem;
}

.collection-details-section .section-header {
  margin-bottom: 2rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  padding-bottom: 1rem;
}

.collection-details-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 2rem;
}

.root-folders-assigned,
.series-in-collection {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.subsection-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.subsection-header h4 {
  color: #f8f9fa;
  font-weight: 600;
  margin: 0;
}

.details-table {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.9rem;
}

.details-table th {
  background-color: rgba(0, 0, 0, 0.2);
  color: #f8f9fa;
  padding: 0.75rem;
  text-align: left;
  font-weight: 600;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.details-table td {
  padding: 0.75rem;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  color: #adb5bd;
}

.details-table tr:hover {
  background-color: rgba(0, 0, 0, 0.1);
}

.text-muted {
  color: #adb5bd;
  font-style: italic;
}

@media (max-width: 768px) {
  .settings-container {
    padding: 1rem;
  }

  h1 {
    font-size: 1.5rem;
  }

  .setting-row {
    grid-template-columns: 1fr;
  }

  .collections-header,
  .section-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .collections-header button,
  .section-header button {
    width: 100%;
  }

  .collections-root-folders-container {
    grid-template-columns: 1fr;
  }

  .collection-details-content {
    grid-template-columns: 1fr;
  }
}
